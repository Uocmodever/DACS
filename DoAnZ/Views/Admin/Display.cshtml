@model DoAnZ.Models.Product

@{
    ViewData["Title"] = "Display";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content("~/images/" + Model.ImageUrl)" alt="Product Image" style="max-width: 200px;" />
        }
    </div>
    <div class="col-md-6">
        <h3>Price: @Model.Price</h3>
        <h3>Category: @Model.Category?.Name</h3>
        <p>@Model.Description</p>
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
        <a asp-action="ProductList" class="btn btn-secondary">Back to List</a>
    </div>
</div>
