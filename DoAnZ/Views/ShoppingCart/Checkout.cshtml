@model Order

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">THANH TOÁN</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Checkout" method="post">
                            <div class="form-group">
                                <label for="shippingAddress">Địa Chỉ Giao Hàng</label>
                                <input type="text" id="shippingAddress" name="shippingAddress" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="notes">Lời Nhắn</label>
                                <textarea id="notes" name="notes" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-primary btn-block">ĐẶT HÀNG</button>
                                </div>
                                <div class="col-md-6">
                                    <a href="/ShoppingCart?" class="btn btn-secondary btn-block mt-md-0 mt-3">TIỆP TỤC MUA HÀNG</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
